<h3>Your Blogposts</h3>
<hr/>
<div>
  <% unless @blog_posts.blank? %>
      <article>
        <% @blog_posts.each do |post| %>
            <div class="panel">
              <div class="left">
                <% if post.body.blank? %>
                    <%= image_tag(post.photo.url) %>
                <% else %>
                    <%= raw(post.body) %>
                <% end %>
              </div>
              <% if post.user.eql?(current_user) %>
                  <div class="row right">
                    <%= link_to "Delete this Post", blog_post_path(post), :method => :delete, :confirm => "Are you sure you want to delete this blogpost?", class: 'tiny button alert' %>
                  </div>
              <% end %>
              <!-- End Main Content -->
  <div style="clear: both;"></div>
  <h5>Comments</h5>

    <div id="comments_div_<%= post.id %>">
      <%= render :partial => "/comments/comments_partial", :locals => {:object => post} %>
    </div>
  </div>
  <% end %>

  <% else %>
      You have no blog posts!
  <% end %>
  </article>
</div>
