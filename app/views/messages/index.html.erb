<div class="row">
  <div class="small-12 columns">
    <div class="panel">
      <h1>Thoughts Provoked</h1>
    </div>
  </div>
</div>
   
<%unless @messages.blank?%>
<div class="small-12 columns">
  <%@messages.each do |message|%>
    <%sender = sender(message)%>
    <b><%= link_to sender.first_name, user_path(sender) %></b> 
    <br/>
    <br/>
    <strong><%= message.topic %></strong><br/><%= message.body %>
    <br/>
    <br/>
      <%= link_to "View Conversation", conversation_message_path(message) %>
    <hr/>
    </div>
</div>
    <%end%>
  <%else%>
    You have no messages!
  <%end%>
</div>























