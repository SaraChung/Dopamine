<style>
    .arrow_box {
        position: relative;
        background: #d5afd4;
        border: 4px solid #c2e1f5;
    }
    .arrow_box:after, .arrow_box:before {
        right: 100%;
        top: 50%;
        border: solid transparent;
        content: " ";
        height: 0;
        width: 0;
        position: absolute;
        pointer-events: none;
    }

    .arrow_box:after {
        border-color: rgba(213, 175, 212, 0);
        border-right-color: #d5afd4;
        border-width: 15px;
        margin-top: -15px;
    }
    .arrow_box:before {
        border-color: rgba(194, 225, 245, 0);
        border-right-color: #c2e1f5;
        border-width: 21px;
        margin-top: -21px;
    }
</style>
