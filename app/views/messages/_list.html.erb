<% unless @messages.blank? %>
    <% @messages.each do |message| %>
        <br/>
        <% sender = sender(message) %>
        <%if sender.email == current_user.email %>
        <fieldset class="arrow_box1" style="width: 50%; float: right; border-radius: 15px;">

	        <!--<h5><b><%#= sender.first_name %></b>:&nbsp;<%#= message.body %></h5>-->
          <h5><%= message.body %></h5>

          </fieldset>
            <p style="clear: right;"></p>
        <% else %>
        <fieldset class="arrow_box" style="width: 50%; float: left; border-radius:  15px;">

	        <!--<h5><b><%#= sender.first_name %></b>:&nbsp;<%#= message.body %></h5>-->
          <h5><%= message.body %></h5>

            </fieldset>
            <p style="clear: left;"></p>
        <% end %>
    <% end %>
<% else %>
    You have no messages.
<% end %>


