<div class="row">
  <div class="small-12 columns">
    <h2>Sign Up for some <strong>Dope</strong></h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <fieldset>
          <div><%= f.label :first_name, :class => "#{'error' if resource.errors[:first_name].any?}"  %><br/>
            <%= f.text_field :first_name, autofocus: true, :class => "#{'error' if resource.errors[:first_name].any?}" %>
            <% if resource.errors[:first_name].any? %>
                <small class="error"><%= resource.errors[:first_name].join(', ') %></small>
            <% end %>
          </div>

          <div><%= f.label :last_name, :class => "#{'error' if resource.errors[:last_name].any?}" %><br/>
            <%= f.text_field :last_name, autofocus: true, :class => "#{'error' if resource.errors[:last_name].any?}" %>
            <% if resource.errors[:last_name].any? %>
                <small class="error"><%= resource.errors[:last_name].join(', ') %></small>
            <% end %>
          </div>

          <div><%= f.label :email, :class => "#{'error' if resource.errors[:email].any?}"%><br />
            <%= f.email_field :email, autofocus: true, :class => "#{'error' if resource.errors[:email].any?}" %>
            <% if resource.errors[:email].any? %>
                <small class="error"><%= resource.errors[:email].join(', ') %></small>
            <% end %>
          </div>

          <div><%= f.label :password, :class => "#{'error' if resource.errors[:password].any?}" %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
            <%= f.password_field :password, autocomplete: "off", :class => "#{'error' if resource.errors[:password].any?}" %>
            <% if resource.errors[:password].any? %>
                <small class="error"><%= resource.errors[:password].join(', ') %></small>
            <% end %>
          </div>

          <div><%= f.label :password_confirmation, :class => "#{'error' if resource.errors[:password_confirmation].any?}" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "#{'error' if resource.errors[:password_confirmation].any?}" %>
            <% if resource.errors[:password_confirmation].any? %>
                <small class="error"><%= resource.errors[:password_confirmation].join(', ') %></small>
            <% end %>
          </div>
        </fieldset>
          <div><%= f.submit "Sign up", class: 'small round button' %></div>
      <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
