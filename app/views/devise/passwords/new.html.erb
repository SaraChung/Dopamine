<div class="row">
  <div class="small-12 columns">
    <h2>Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
        <fieldset>
          <div><%= f.label :email, :class => "#{'error' if resource.errors[:email].any?}" %>
            <br/>
            <%= f.email_field :email, autofocus: true, :class => "#{'error' if resource.errors[:email].any?}" %>
            <% if resource.errors[:email].any? %>
                <small class="error"><%= resource.errors[:email].join(', ') %></small>
            <% end %>
          </div>
        </fieldset>
        <div><%= f.submit "Send me reset password instructions", class: 'small round button' %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>